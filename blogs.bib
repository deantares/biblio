@INPROCEEDINGS{RoblesKochBarahona04,
AUTHOR = "Gregorio Robles and Stefan Koch and Jesús M. González-Barahona",
TITLE = "Remote analysis and measurement of libre software systems by means
of the CVSAnalY tool",
BOOKTITLE = "Proceedings of the 2nd ICSE Workshop on Remote Analysis and
Measurement of Software Systems (RAMSS '04)",
YEAR = "2004",
